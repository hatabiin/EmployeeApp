@model IEnumerable<EmployeeApp.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>社員名</th>
                <th>部署名</th>
                <th>課名</th>
                <th>資格名</th>
                <th>登録日</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.EmployeeName</td>
                    <td>@if (employee.Departments?.Any() == true)
                        {
                            @string.Join(", ", employee.Departments.Select(d => d.DepartmentName))
                        }
                        else
                        {
                            <span>未配属</span>
                        }
                    </td>
                    <td>
                        @if (employee.Divisions?.Any() == true)
                        {
                            @string.Join(", ", employee.Divisions.Select(d => d.DivisionName))
                        }
                        else
                        {
                            <span>未配属</span>
                        }
                    </td>
                    <td>
                        @if (employee.Licenses?.Any() == true)
                        {
                            @string.Join(", ", employee.Licenses.Select(l => l.LicenseName))
                        }
                        else
                        {
                            <span>未保持</span>
                        }
                    </td>
                    <td>@employee.CreatedAt?.ToString("yyyy年MM月dd日")</td>
                </tr>
            }
        </tbody>
    </table>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
